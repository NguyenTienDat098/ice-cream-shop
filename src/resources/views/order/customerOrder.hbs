<div class='view-customer-orders w-100 bg-white' style='min-height: 100vh'>
  <div class='search-customer-order w-100 bg-white d-flex align-items-center justify-content-center'>
    <div class='input-group rounded'>
      <input type='search' class='form-control rounded' placeholder='Search' aria-label='Search'
        aria-describedby='search-addon' />
    </div>
  </div>
  <table class='table w-100'>
    <thead>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Code Order</th>
        <th scope='col'>Process</th>
        <th scope='col' class='text-center'>Handle</th>
      </tr>
    </thead>
    <tbody class='view-table'>
      {{#each bills}}
      <tr class='view-item'>
        <th scope='row'>{{sum @index 1}}</th>
        <td class='order-code'>{{this.code}}</td>
        <td>{{this.processDelivery}}</td>
        <td class='text-center'>
          <a href='/customer-orders/{{this.code}}/edit'>
            <ion-icon name='create-outline' style='width: 20px; height: 20px; 
                            padding: 5px; border-radius: 5px; 
                            color: #000; box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.5);'
              data-bs-whatever="{{this.code}}">
            </ion-icon>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{! script}}
<script type='text/javascript' src='/public/javascript/customerOrder.js'></script>