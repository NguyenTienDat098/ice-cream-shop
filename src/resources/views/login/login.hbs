<section
  class='vh-100 position-absolute w-100 bg-white'
  style='z-index: 5; top: 0;'
>
  <div class='container-fluid h-custom'>
    <div class='row d-flex justify-content-center align-items-center h-100'>
      <div class='col-md-9 col-lg-6 col-xl-5'>
        <img
          src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp'
          class='img-fluid'
          alt='Sample image'
        />
      </div>
      <div class='col-md-8 col-lg-6 col-xl-4 offset-xl-1 bg-white'>
        <form method='POST' action='/auth/login' class='form-login'>
          <div class='divider d-flex align-items-center my-4'>
            {{#if error}}
              <p
                class='text-center fw-bold mx-3 mb-0 fs-4 text-danger'
                style="font-family: 'Edu VIC WA NT Beginner', cursive;"
              >Username or Password is Incorrect !
              </p>
            {{else}}
              <p
                class='text-center fw-bold mx-3 mb-0 fs-4'
                style="font-family: 'Edu VIC WA NT Beginner', cursive;"
              >Login
              </p>
            {{/if}}
          </div>
          <div class='form-outline mb-4'>
            <input
              type='text'
              id='form3Example3'
              name='username'
              class='form-control form-control-lg input-lg'
              placeholder='Enter a valid Username'
            />
            <label class='form-label' for='form3Example3'>
              Username
            </label>
          </div>
          <div class='form-outline mb-3'>
            <input
              type='password'
              id='form3Example4'
              name='password'
              class='form-control form-control-lg input-lg'
              placeholder='Enter password'
            />
            <label class='form-label' for='form3Example4'>
              Password
            </label>
          </div>
          <div class='d-flex justify-content-between align-items-center'>
            <!-- Checkbox -->
            <div class='form-check mb-0'>
              <input
                class='form-check-input me-2'
                type='checkbox'
                value=''
                id='form2Example3'
              />
              <label class='form-check-label' for='form2Example3'>
                Remember me
              </label>
            </div>
            <a href='#!' class='text-body'>
              Forgot password?
            </a>
          </div>
          <div class='text-center text-lg-start mt-4 pt-2'>
            <button
              type='submit'
              class='btn btn-primary btn-lg btn-login'
              style='padding-left: 2.5rem; padding-right: 2.5rem;'
            >Login
            </button>
            <p class='small mt-2 pt-1 mb-0'>Don't have an account?
              <a href='/auth/signup' class='link-danger fw-bold'>
                Register
              </a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<script
  type='text/javascript'
  src='/public/javascript/checkValueForm.js'
></script>